    <!-- == SOFTWARE SPECIFIC SECTION == -->
    <title>Vividl</title>
    <authors>alxnull</authors>
    <projectUrl>https://vividl.sourceforge.io/</projectUrl>
    <iconUrl>https://gitcdn.xyz/repo/Bluegrams/Vividl/master/img/icon.png</iconUrl>
